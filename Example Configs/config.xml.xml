<?xml version="1.0" encoding="UTF-8"?>
<htcpcp-config>
    <available>
        <pot>Pot 1</pot>
        <pot>Pot 2</pot>
    </available>
    <safetyLevel>Yes|No|User-Awake|Token[TOKEN]</safetyLevel>
    <maximum-clients>10</maximum-clients>
    <bind>
        <port>80</port>
    </bind>
    <no-alcohol>
        <off>true</off> <!--Turned alcohol off-->
        <from>
            <hour>06</hour>
            <minute>00</minute>
        </from> <!--a from tag may not exist without a to tag. This tag is ignored if off is true!-->
        <to>
            <hour>18</hour>
            <minute>00</minute>
        </to>
    </no-alcohol> <!--deactivates all alcoholic additions (between a specific time)-->
    <pious>true</pious>
    <!--If pious mode is active, the server returns a praying hand if alcohol is requested:
            _.-/`)
         // / / )
      .=// / / / )
     //`/ / / / /
    // /     ` /
   ||         /
    \\       /
     ))    .'
jgs //    /
         /
THOU SHALT NOT DRINK!
          -->
</htcpcp-config>